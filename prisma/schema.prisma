generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               Int            @id @default(autoincrement())
  name             String
  email            String         @unique
  type             String
  category         String         @default("Front Desk")
  max_weekly_hours Int            @default(40)
  auto_schedule    Boolean        @default(true)
  leave            Leave[]
  shifts           Shift[]
  baseRules        UserBaseRule[]
  skills           UserSkill[]
  hourly_rate      Float          @default(0)
}

model MonthlyBudget {
  id     Int    @id @default(autoincrement())
  month  String @unique // YYYY-MM
  budget Float
}

model Leave {
  id        Int     @id @default(autoincrement())
  userId    Int
  startDate String
  endDate   String
  reason    String?
  status    String  @default("PENDING")
  leaveType String  @default("UNPAID")
  user      User    @relation(fields: [userId], references: [id])
}

model Department {
  id              Int              @id @default(autoincrement())
  name            String
  color_code      String
  shifts          Shift[]
  shiftTemplates  ShiftTemplate[]
  userSkills      UserSkill[]
  automationRules AutomationRule[]
  constraints     Constraint[]
}

model AutomationRule {
  id            Int        @id @default(autoincrement())
  department_id Int
  day_of_week   Int        // 0=Sun, 1=Mon, ..., 6=Sat
  start_time    String     // "HH:mm"
  end_time      String     // "HH:mm"
  count         Int        @default(1)
  required_type String?    // "FULL_TIME", "PART_TIME", or null
  is_smod       Boolean    @default(false)
  department    Department @relation(fields: [department_id], references: [id])
}

model UserSkill {
  user_id       Int
  department_id Int
  department    Department @relation(fields: [department_id], references: [id])
  user          User       @relation(fields: [user_id], references: [id])

  @@id([user_id, department_id])
}

model OperatingDay {
  id         Int     @id @default(autoincrement())
  date       String  @unique
  status     String
  open_time  String?
  close_time String?
  event_note String?
}

model ShiftTemplate {
  id            Int            @id @default(autoincrement())
  name          String
  start_time    String
  end_time      String
  department_id Int
  department    Department     @relation(fields: [department_id], references: [id])
  baseRules     UserBaseRule[]
}

model UserBaseRule {
  id              Int           @id @default(autoincrement())
  user_id         Int
  template_id     Int
  day_of_week     Int
  recurrence_type String
  template        ShiftTemplate @relation(fields: [template_id], references: [id])
  user            User          @relation(fields: [user_id], references: [id])
}

model Shift {
  id            Int        @id @default(autoincrement())
  user_id       Int
  department_id Int
  date          String
  start_time    String
  end_time      String
  is_smod       Boolean    @default(false)
  department    Department @relation(fields: [department_id], references: [id])
  user          User       @relation(fields: [user_id], references: [id])
}

model SchedulePublish {
  id          Int      @id @default(autoincrement())
  month       String   @unique // YYYY-MM
  publishedAt DateTime @default(now())
  publishedBy String?
}

model Constraint {
  id          Int         @id @default(autoincrement())
  name        String      // e.g. "Max 5 Days in a Row"
  description String?
  type        String      // 'MAX_CONSECUTIVE_DAYS', 'MAX_HOURS_ROLLING'
  params      String      // JSON: { "limit": 5, "window": 7 }
  severity    String      // 'WARNING', 'CRITICAL'
  isActive    Boolean     @default(true)
  department_id Int?
  department    Department? @relation(fields: [department_id], references: [id])
}
